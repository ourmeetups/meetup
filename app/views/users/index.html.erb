<p id="notice"><%= notice %></p>



  <% if !(current_user) %>
    <h1> Login Needed </h1>
    <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
  <% else %>
    <% if current_user.isadmin == 0 %>
      <script type="text/javascript">
        window.location.href="notadmin"
      </script>
    <% else %>
  <%= link_to 'New User', new_user_path %>
<div class="container">
  <div class="panel panel-danger">
    <div class="panel-heading">
    <center><strong><h3>All Users &nbsp; &nbsp;   </span></h3> </strong></center>
    </div>
    <div class="panel-body">





        <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      
      <th>Gender</th>
      <th>Isadmin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.gender %></td>
        <td><%= user.isadmin %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-warning' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>




      </div>
    </div>
    </div>







