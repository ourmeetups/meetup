
<style>
.myimg{
  width:220px;
  height:250px;

}

</style>



<p id="notice"><%= notice %></p>


<div class="container">
  <div class="panel panel-danger">
    <div class="panel-heading">
    <center><strong><h3>Your Profile Info</h3></strong></center>
    </div>
    <div class="panel-body">
    <div class="row">

    <div class="col-sm-3">
      <%= image_tag @user.avatar.url, class: 'img img-thumbnail myimg' %>
    </div>
    <div class="col-sm-9">

      <div class="row">
      <div class="col-sm-2">
        <h4><strong style="Color:rgb(169, 68, 70);">Name:</strong></h4>
      </div>
      <div class="col-sm-10">
        <h4><strong><%= @user.name %></strong></h4>
      </div>
      </div>




      <div class="row">
      <div class="col-sm-2">
        <h4><strong style="Color:rgb(169, 68, 70);">Email:</strong></h4>
      </div>
      <div class="col-sm-10">
        <h4><strong><span><%= @user.email %></span></strong></h4>
      </div>
      </div>


<hr />
<center>
<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-info' %> |
<%= link_to 'Back', users_path, class: 'btn btn-warning' %>
</center>
        </div>
      </div>
    </div>
  </div>
</div>


